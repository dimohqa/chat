{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["./.eslintrc.js", "./src"],
  "exclude": ["../server"]
}
