{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "target": "es6",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/api/*": ["client/src/api/*"],
      "@/store/*": ["client/src/store/*"],
      "@/types/*": ["src/types/*"],
      "@/constants/*": ["src/constants/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["./.eslintrc.js", "./src", "./webpack.config.js"],
  "exclude": ["../server", "node_modules", "dist"]
}
